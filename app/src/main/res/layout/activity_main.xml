<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_name_sity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Введите  имя   города                       "
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/good_weather_sky"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/sky" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotty1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="-200dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="invisible"

        />
    <ImageView
        android:id="@+id/bad_weather_sky"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="-260dp"
        android:src="@drawable/blue"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_marginTop="-320dp"
        android:src="@drawable/blue"
        />



    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/blavhbuild"
        android:layout_marginTop="-120dp"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="-80dp"
        android:layout_marginStart="148dp"
        android:src="@drawable/blacbuild2"
        />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="321dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/blavhbuild" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="348dp"
        android:layout_marginTop="-238dp"
        android:src="@drawable/sun2"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="-110dp"
        android:src="@drawable/clooouds"
        />
    <ImageView
        android:id="@+id/bad_weather_cloud1"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-106dp"
        android:src="@drawable/clooouds"

        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/bad_weather_cloud2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="-106dp"
        android:src="@drawable/clooouds"

        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="176dp"
        >
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="8 авг 2025г 12:45:04"
            android:textSize="24sp"
            android:textColor="#9711AE"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_name_sity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="London"
            android:layout_marginStart="12dp"
            android:textSize="24sp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:background="@color/teal_200"

        >
        <ImageView
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/vlajnost"
            android:layout_marginTop="14dp"/>
        <TextView
            android:id="@+id/humidityPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="12 %"
            android:textColor="#152DB3"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/gradus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textColor="#1AA820"
            android:text="35"
            android:textSize="36sp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/gradusnic" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginTop="-62dp"
        android:layout_marginEnd="4dp"
        android:text="Показать погоду"
        app:cornerRadius="14dp" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotty_rain"
        android:layout_width="390dp"
        android:layout_height="260dp"
        android:layout_marginStart="4dp"


        android:layout_marginTop="-462dp"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

</LinearLayout>